<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.diasSemana.AulasQuintaFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".AulasQuintaFragment">

            <include
                android:id="@+id/aulas_quinta_toolbar"
                layout="@layout/back_toolbar" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/aulas_quinta_toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnPregarMeuEvangelho"
                android:backgroundTint="@color/light_blue"
                android:layout_margin="1dp"
                android:id="@+id/btnFamiliaEterna"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="19h - A Família Eterna" />

            <Button
                app:layout_constraintTop_toBottomOf="@id/btnFamiliaEterna"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnDoutrinaConvenios"
                android:backgroundTint="@color/light_blue"
                android:layout_margin="1dp"
                android:id="@+id/btnPregarMeuEvangelho"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="20h - Pregar Meu Evangelho"/>

            <Button
                app:layout_constraintTop_toBottomOf="@id/btnPregarMeuEvangelho"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/light_blue"
                android:layout_margin="1dp"
                android:id="@+id/btnDoutrinaConvenios"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="22h - Doutrina &amp; Convênios" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>